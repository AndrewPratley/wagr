              </div>
              <div class="blurb-right">
                <%= image_tag('icons/cross-icon.png', alt: 'Cross Icon') %>
                <p>23</p>
                <%= image_tag('icons/tick-icon.png', alt: 'Tick Icon') %>
                <p>47</p>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>

