
<div class="hero">
  <div class="hero-text">
    <h2>Predict the <span class="highlight">Future.</span></h2>
    <h3>Browse and create wagers about anything you believe the future holds.</h3>
  </div>
  <%= image_tag('hero2.png', alt: 'Hero') %>
</div>

<div class="prop-holder">
  <%= image_tag('icons/popular-icon.png', alt: 'Popular Icon') %>
  <h4>POPULAR</h4>

  <div class="holder-4-full">
    <% @prop_popular.each do |prop| %>
      <div class="prop" style="background-image: url(<%= prop.image %>)">
        <a href="/propositions/<%= prop.id %>">
          <div class="overlay">
            <div class="prop-blurb">
              <h5><%= prop.title %></h5>
              <div class="blurb-left">
                <% timeToDeadline = (((prop.deadline - Time.now) /60) /60).floor %>
                <p><%= number_with_delimiter(timeToDeadline, :delimiter => ',') %> hours</p>
              </div>
              <div class="blurb-right">
                <%= image_tag('icons/cross-icon.png', alt: 'Cross Icon') %>
                <p>23</p>
                <%= image_tag('icons/tick-icon.png', alt: 'Tick Icon') %>
                <p>47</p>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>

<div class="prop-holder">
  <%= image_tag('icons/new-icon.png', alt: 'New Icon') %>
  <h4>NEW</h4>

  <div class="holder-4-full">
    <% @props.each do |prop| %>
      <div class="prop" style="background-image: url(<%= prop.image %>)">
