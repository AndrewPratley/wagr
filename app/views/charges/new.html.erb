

<div class="form-block charges-block">

  <h2 id="message-text">Funding Options</h2>

  <p>Credit $50 to your Wagr account</p>

  <%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>

    </article>
    <input type="hidden" name="custom_amount" value="5000">
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Credit Wagr Account"
            data-amount="5000"
            data-locale="auto"></script>
  <% end %>

  <p>Credit $100 to your Wagr account</p>

  <%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>

    </article>
    <input type="hidden" name="custom_amount" value="10000">
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="Credit Wagr Account"
            data-amount="10000"
            data-locale="auto"></script>
    <% end %>

    <p>Credit $150 to your Wagr account</p>

    <%= form_tag charges_path do %>
      <article>
        <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
        <% end %>

      </article>
      <input type="hidden" name="custom_amount" value="15000">
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
              data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
              data-description="Credit Wagr Account"
              data-amount="15000"
              data-locale="auto"></script>
    <% end %>


  <a href="/dashboard" style="color: white">Back to Dashboard</a>


</div>
